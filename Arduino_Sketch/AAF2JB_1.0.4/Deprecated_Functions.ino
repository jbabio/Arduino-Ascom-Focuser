// Move stepper anticlockwise 
//------------------------------------------------------------------
void anticlockwise()
{
  step++;
  if (step > 7)
    step = 0;

  SetOutput(step);
  delayMicroseconds(motorSpeed);
}
//------------------------------------------------------------------

//------------------------------------------------------------------
// Move stepper clockwise 
//------------------------------------------------------------------
void clockwise()
{
  step--;
  if (step < 0)
    step = 7;
    
  SetOutput(step);
  delayMicroseconds(motorSpeed);
}
